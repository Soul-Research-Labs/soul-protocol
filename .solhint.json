{
  "extends": "solhint:recommended",
  "plugins": [],
  "excludedFiles": [
    "contracts/verifiers/StateCommitmentVerifier.sol",
    "contracts/verifiers/StateTransferVerifier.sol",
    "contracts/verifiers/ConfidentialTransferVerifier.sol",
    "contracts/verifiers/NullifierVerifier.sol",
    "contracts/verifiers/PolicyVerifier.sol",
    "contracts/verifiers/MembershipVerifier.sol",
    "contracts/verifiers/RangeProofVerifier.sol",
    "contracts/test/**/*.sol",
    "contracts/mocks/**/*.sol"
  ],
  "rules": {
    "avoid-low-level-calls": "warn",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "compiler-version": ["error", "^0.8.20"],
    "const-name-snakecase": "warn",
    "contract-name-capwords": "error",
    "event-name-capwords": "error",
    "func-name-mixedcase": "warn",
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "imports-on-top": "error",
    "max-line-length": ["warn", 120],
    "max-states-count": ["warn", 20],
    "no-empty-blocks": "warn",
    "no-inline-assembly": "off",
    "no-unused-import": "error",
    "no-unused-vars": "error",
    "not-rely-on-time": "warn",
    "ordering": "warn",
    "private-vars-leading-underscore": "warn",
    "reason-string": ["warn", { "maxLength": 64 }],
    "reentrancy": "error",
    "state-visibility": "error",
    "use-forbidden-name": "error",
    "var-name-mixedcase": "warn",
    "visibility-modifier-order": "warn",
    "code-complexity": ["warn", 7],
    "function-max-lines": ["warn", 50],

    "no-complex-fallback": "error",
    "no-global-import": "warn",
    "payable-fallback": "warn",

    "// NatSpec Documentation Rules": "// Enforced â€” documentation is complete",
    "natspec-author": "warn",
    "natspec-title": "error",
    "natspec-notice": "error",
    "natspec-dev": "off",
    "natspec-param": "error",
    "natspec-return": "error"
  }
}
