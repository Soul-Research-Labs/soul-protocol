{
  "projects": [
    {
      "slug": "pil-mainnet",
      "name": "PIL Mainnet",
      "network_id": 1
    },
    {
      "slug": "pil-sepolia", 
      "name": "PIL Sepolia",
      "network_id": 11155111
    },
    {
      "slug": "pil-arbitrum",
      "name": "PIL Arbitrum",
      "network_id": 42161
    },
    {
      "slug": "pil-base",
      "name": "PIL Base",
      "network_id": 8453
    },
    {
      "slug": "pil-optimism",
      "name": "PIL Optimism",
      "network_id": 10
    }
  ],
  "contracts": [
    {
      "name": "ProofCarryingContainer",
      "address": "${PC3_ADDRESS}",
      "network_id": "${NETWORK_ID}"
    },
    {
      "name": "PolicyBoundProofs",
      "address": "${PBP_ADDRESS}",
      "network_id": "${NETWORK_ID}"
    },
    {
      "name": "ExecutionAgnosticStateCommitments",
      "address": "${EASC_ADDRESS}",
      "network_id": "${NETWORK_ID}"
    },
    {
      "name": "CrossDomainNullifierAlgebra",
      "address": "${CDNA_ADDRESS}",
      "network_id": "${NETWORK_ID}"
    },
    {
      "name": "PILv2Orchestrator",
      "address": "${ORCHESTRATOR_ADDRESS}",
      "network_id": "${NETWORK_ID}"
    }
  ],
  "alerts": [
    {
      "name": "Critical: Pause Event",
      "type": "event",
      "event_name": "Paused",
      "severity": "critical",
      "notification_channels": ["email", "slack", "pagerduty"]
    },
    {
      "name": "Critical: Ownership Transfer",
      "type": "event",
      "event_name": "OwnershipTransferred",
      "severity": "critical",
      "notification_channels": ["email", "slack", "pagerduty"]
    },
    {
      "name": "Warning: High Gas Usage",
      "type": "function",
      "condition": "gas_used > 1000000",
      "severity": "warning",
      "notification_channels": ["slack"]
    },
    {
      "name": "Warning: Failed Transaction",
      "type": "transaction",
      "condition": "status == 'failed'",
      "severity": "warning",
      "notification_channels": ["slack"]
    },
    {
      "name": "Info: Container Created",
      "type": "event",
      "event_name": "ContainerCreated",
      "severity": "info",
      "notification_channels": ["webhook"]
    },
    {
      "name": "Info: Policy Registered",
      "type": "event",
      "event_name": "PolicyRegistered",
      "severity": "info",
      "notification_channels": ["webhook"]
    }
  ],
  "actions": [
    {
      "name": "Auto-Pause on Anomaly",
      "trigger": "anomaly_detected",
      "action_type": "webhook",
      "webhook_url": "${INCIDENT_WEBHOOK_URL}"
    }
  ],
  "simulations": {
    "enabled": true,
    "share_with_team": true
  },
  "analytics": {
    "enabled": true,
    "metrics": [
      "transaction_count",
      "gas_used",
      "unique_users",
      "total_value_locked"
    ]
  }
}
