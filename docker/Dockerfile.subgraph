# Subgraph Deployer Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies for graph-cli
RUN apk add --no-cache python3 make g++ git curl

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy subgraph files
COPY . .

# Generate code
RUN npm run codegen || true

EXPOSE 8000

CMD ["npm", "run", "deploy-local"]
