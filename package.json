{
  "name": "@zaseon/sdk",
  "version": "2.0.0",
  "type": "module",
  "description": "ZASEON - Cross-chain ZK privacy middleware for confidential state transfer across L2 networks",
  "scripts": {
    "compile": "hardhat compile",
    "compile:forge": "forge build",
    "test": "hardhat test",
    "test:forge": "forge test -vvv",
    "test:integration": "forge test --match-path 'test/integration/*' -vvv",
    "test:security": "forge test --match-path 'test/security/*' -vvv",
    "gas:snapshot": "forge snapshot --match-contract GasSnapshotBenchmark",
    "gas:check": "forge snapshot --match-contract GasSnapshotBenchmark --check --tolerance 5",
    "test:fuzz": "forge test --match-path 'test/fuzz/*' --fuzz-runs 10000",
    "test:fuzz:deep": "FOUNDRY_PROFILE=deep-fuzz forge test --match-path 'test/fuzz/*'",
    "test:fuzz:security": "FOUNDRY_PROFILE=security-fuzz forge test --match-path 'test/attacks/*'",
    "test:fuzz:nightly": "FOUNDRY_PROFILE=nightly forge test",
    "test:invariant": "forge test --match-path 'test/invariant/*' --fuzz-runs 256",
    "test:invariant:deep": "FOUNDRY_PROFILE=deep-fuzz forge test --match-path 'test/invariant/*'",
    "test:symbolic": "FOUNDRY_PROFILE=halmos halmos --match-path 'test/formal/*' --solver-timeout-assertion 120",
    "coverage": "echo 'NOTE: Hardhat coverage requires solidity-coverage (incompatible with Hardhat 3). Use coverage:modular or coverage:stub instead.' && exit 1",
    "coverage:forge": "echo 'NOTE: forge coverage fails with stack-too-deep on full build. Use coverage:modular for per-module coverage.' && forge coverage --ir-minimum --report lcov",
    "coverage:stub": "python3 scripts/run_coverage.py --report=summary",
    "coverage:modular": "bash scripts/coverage_modular.sh --report summary",
    "coverage:modular:lcov": "bash scripts/coverage_modular.sh --report lcov",
    "coverage:hardhat": "python3 scripts/run_hardhat_coverage.py --report summary",
    "clean": "hardhat clean && forge clean",
    "lint": "npx solhint 'contracts/**/*.sol' --config .solhint.json",
    "lint:fix": "npx solhint 'contracts/**/*.sol' --config .solhint.json --fix",
    "slither": "slither . --config-file slither.config.json",
    "slither:triage": "slither . --config-file slither.config.json --triage-mode",
    "slither:json": "slither . --config-file slither.config.json --json slither-report.json",
    "mythril": "myth analyze contracts/primitives/ZKBoundStateLocks.sol --execution-timeout 3600 --max-depth 50",
    "mythril:quick": "myth analyze contracts/primitives/ZKBoundStateLocks.sol --max-depth 10",
    "echidna": "echidna . --config test/fuzz/echidna.config.yaml --contract ZaseonInvariantTests",
    "certora": "certoraRun certora/conf/verify.conf",
    "certora:zkslocks": "certoraRun certora/conf/verify_zkslocks.conf",
    "certora:batch-accumulator": "certoraRun certora/conf/verify_batch_accumulator.conf",
    "certora:privacy-oracle": "certoraRun certora/conf/verify_privacy_oracle.conf",
    "certora:full": "npm run certora:zkslocks && npm run certora:batch-accumulator && npm run certora:privacy-oracle",
    "certora:check": "for conf in certora/conf/*.conf; do certoraRun $conf --compilation_steps_only; done",
    "halmos": "halmos --solver-timeout-assertion 300000 --match-test 'check_'",
    "halmos:zkslocks": "halmos --match-contract ZKSlocksSymbolicTest --solver-timeout-assertion 600000",
    "security:static": "npm run lint && npm run slither",
    "security:fuzz": "npm run test:fuzz",
    "security:formal": "npm run halmos && npm run certora:full",
    "security:all": "npm run security:static && npm run security:fuzz && npm run test:invariant",
    "security:quick": "npm run lint && npm run slither && npm run test:fuzz -- --fuzz-runs 1000",
    "security:ci": "npm run lint && npm run slither && npm run test:fuzz && npm run test:invariant && npm run halmos",
    "security:deep": "npm run security:all && npm run test:fuzz:deep",
    "security:mutation": "gambit mutate --config gambit.yaml && forge test",
    "security:attack": "forge test --match-path 'test/attacks/*' -vvv",
    "security:stress": "forge test --match-path 'test/stress/*' -vvv --fuzz-runs 10000",
    "security:crosschain": "forge test --match-path 'test/crosschain/*' -vvv",
    "security:weekly": "npm run security:all && npm run mythril",
    "security:monthly": "npm run security:deep && npm run security:mutation && npm run certora:full",
    "precommit:install": "pip install pre-commit && pre-commit install",
    "gas:report": "forge test --gas-report",
    "gas:snapshot:full": "forge snapshot",
    "gas:verifiers": "forge test --match-contract VerifierGasBenchmark --gas-report -vvv",
    "noir:install": "./scripts/install_noir.sh",
    "noir:compile": "cd noir && nargo compile --workspace",
    "noir:test": "cd noir && nargo test --workspace",
    "noir:codegen": "./scripts/generate_verifiers.sh",
    "noir:generate": "npm run noir:compile && npm run noir:codegen",
    "noir:benchmark": "npm run noir:generate && npm run gas:verifiers",
    "noir:check": "cd noir && nargo check --workspace",
    "noir:prove": "cd noir && nargo prove --workspace",
    "noir:verify": "cd noir && nargo verify --workspace",
    "noir:clean": "rm -rf noir/target && rm -rf contracts/verifiers/generated/*.sol",
    "noir:all": "npm run noir:clean && npm run noir:generate && npm run noir:test",
    "build:all": "npm run noir:codegen && npm run compile",
    "build:verifiers": "forge build --contracts contracts/verifiers/",
    "coverage:targeted": "forge coverage --match-path 'test/unit/*' --ir-minimum --report summary",
    "coverage:governance": "forge coverage --match-path 'test/governance/*' --ir-minimum --report summary",
    "coverage:full": "python3 scripts/run_coverage.py --report=full",
    "coverage:analyze": "python3 scripts/analyze_coverage.py --lcov lcov.info --threshold 85",
    "coverage:validate-stubs": "python3 scripts/validate_stubs.py",
    "coverage:ci": "python3 scripts/run_coverage.py --report=lcov && python3 scripts/analyze_coverage.py --lcov lcov.info --threshold 85",
    "docs:check": "python3 scripts/check_natspec_coverage.py",
    "docs:generate": "forge doc --out docs/api",
    "test:governance": "forge test --match-path 'test/governance/*' -vvv",
    "test:crosschain-privacy": "forge test --match-path 'test/privacy/CrossChain*' -vvv",
    "test:fork": "FORK_TESTS=true forge test --match-path 'test/fork/*' -vvv",
    "test:deep-fuzz": "forge test --match-path 'test/fuzz/*' --fuzz-runs 10000000 --fuzz-seed 42",
    "analyze:complexity": "python3 scripts/analyze_complexity.py --dir contracts/ --threshold 10",
    "analyze:dependencies": "python3 scripts/analyze_dependencies.py --dir contracts/ --max-depth 4",
    "analyze:dependencies:dot": "python3 scripts/analyze_dependencies.py --dir contracts/ --format dot > dependency_graph.dot",
    "analyze:all": "npm run analyze:complexity && npm run analyze:dependencies"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "@nomicfoundation/hardhat-keystore": "^3.0.0",
    "@nomicfoundation/hardhat-mocha": "^3.0.9",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.9",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.9",
    "chai": "^5.1.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "hardhat": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "viem": "^2.30.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "poseidon-lite": "^0.3.0"
  },
  "overrides": {
    "elliptic": "^6.6.1",
    "bn.js": "^5.2.1",
    "@ethersproject/signing-key": {
      "elliptic": "^6.6.1"
    },
    "@nomicfoundation/hardhat-verify": {
      "@ethersproject/abi": {
        "@ethersproject/hash": {
          "@ethersproject/abstract-signer": {
            "@ethersproject/abstract-provider": {
              "@ethersproject/transactions": {
                "@ethersproject/signing-key": {
                  "elliptic": "^6.6.1"
                }
              }
            }
          }
        }
      }
    },
    "lodash-es": "^4.17.21",
    "diff": "^8.0.3",
    "undici": "^6.23.0",
    "ws": "^8.17.1",
    "tar": "^6.2.1",
    "form-data": "^4.0.0",
    "jsonpath": "npm:jsonpath-plus@^10.0.0",
    "bfj": "^9.0.0"
  }
}
